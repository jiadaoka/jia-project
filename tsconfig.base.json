{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true, // 检查未使用参数
        "noFallthroughCasesInSwitch": true,

        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@packages/*": ["packages/*"],
            "@ui-vue/*": ["packages/jia-ui-vue/*"],
            "@utils/*": ["packages/jia-utils/*"]
        }
    }
}
